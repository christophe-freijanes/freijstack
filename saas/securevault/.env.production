# ============================================
# SecureVault - Production Environment
# ============================================

# Environment identifier
ENV=production
ENV_SUFFIX=

# Container names
CONTAINER_PREFIX=securevault

# Mot de passe unique pour la base
DB_PASSWORD=ExempledeMotdePasseTresSecurise123!

# Database configuration
POSTGRES_DB=securevault
POSTGRES_USER=securevault
POSTGRES_PASSWORD=${DB_PASSWORD}

# Database connection
DB_HOST=postgres
DATABASE_URL=postgresql://securevault:${DB_PASSWORD}@postgres:5432/securevault

# Security
JWT_SECRET=${JWT_SECRET:-generate_with_openssl_rand_hex_32}
ENCRYPTION_KEY=${ENCRYPTION_KEY:-generate_with_openssl_rand_hex_32}

# API Configuration
NODE_ENV=production
PORT=3001
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=24h

# URLs
FRONTEND_URL=https://vault.freijstack.com
BACKEND_HOST=vault-api.freijstack.com
FRONTEND_HOST=vault.freijstack.com
API_URL=https://vault-api.freijstack.com/api

# Network names
APP_NETWORK=securevault_network
EXTERNAL_NETWORK=web

# Volume names
POSTGRES_VOLUME=securevault_postgres_data

# Traefik router names
BACKEND_ROUTER=securevault-backend
FRONTEND_ROUTER=securevault-frontend
CORS_MIDDLEWARE=securevault-cors
# ============================================
# SSO/SAML Configuration (Optional)
# ============================================
SAML_ENABLED=false
SAML_IDP_NAME="Company SSO"

# Identity Provider URLs
SAML_ENTRY_POINT=https://idp.example.com/sso/saml
SAML_ISSUER=securevault
SAML_CALLBACK_URL=https://vault-api.freijstack.com/api/auth/saml/callback

# IdP Certificate (get from your identity provider)
SAML_CERT=""
# OR path to certificate file:
# SAML_CERT_PATH=./certs/idp-cert.pem

# Attribute Mapping (default values for most providers)
SAML_ATTR_EMAIL=http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress
SAML_ATTR_USERNAME=http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name
SAML_ATTR_FIRSTNAME=http://schemas.xmlsoap.org/ws/2005/05/identity/claims/givenname
SAML_ATTR_LASTNAME=http://schemas.xmlsoap.org/ws/2005/05/identity/claims/surname

# Session Configuration
SESSION_SECRET=<GENERATE_WITH_OPENSSL_RAND_HEX_32>
SAML_SESSION_TIMEOUT=480
# ==================================================
# Environment
# ==================================================
NODE_ENV=production
PORT=3001

# ==================================================
# Application
# ==================================================
APP_VERSION=1.0.0
FRONTEND_URL=https://vault.freijstack.com

# ==================================================
# PostgreSQL (RECOMMANDÉ : DATABASE_URL)
# ==================================================
DATABASE_URL=postgresql://securevault_user:STRONG_PASSWORD@postgres:5432/securevault

# (Optionnel si DATABASE_URL présent)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=securevault
POSTGRES_USER=securevault_user
POSTGRES_PASSWORD=STRONG_PASSWORD

# ==================================================
# PostgreSQL tuning (readiness)
# ==================================================
READINESS_DB_TIMEOUT_MS=1500
PG_CONN_TIMEOUT_MS=1000
PG_POOL_MAX=3
PG_IDLE_TIMEOUT_MS=10000
PG_SSL=false

# ==================================================
# Security
# ==================================================
JWT_SECRET=CHANGE_ME_SUPER_SECRET
ENCRYPTION_KEY=CHANGE_ME_32_BYTES_MIN
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=1h

# ==================================================
# Rate Limiting
# ==================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================================================
# Sessions / SAML (si activé)
# ==================================================
SESSION_SECRET=CHANGE_ME_SESSION_SECRET
SESSION_COOKIE_NAME=securevault.sid

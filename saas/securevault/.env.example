# Environment variables for SecureVault
# Copy to .env and fill with production values

# Database
DB_PASSWORD=your_secure_db_password_here

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_32_bytes_hex

# Encryption Key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_encryption_key_32_bytes_hex

# Optional: Custom domain configuration
# BACKEND_DOMAIN=vault-api.freijstack.com
# FRONTEND_DOMAIN=vault.freijstack.com

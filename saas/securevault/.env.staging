# ============================================
# SecureVault - Staging Environment
# ============================================

# Environment identifier
ENV=staging
ENV_SUFFIX=-staging

# Container names
CONTAINER_PREFIX=securevault-staging

# Database configuration
POSTGRES_DB=securevault_staging
POSTGRES_USER=securevault_staging
POSTGRES_PASSWORD=${DB_PASSWORD_STAGING:-changeme_in_staging}

# Database connection
DB_HOST=postgres-staging
DATABASE_URL=postgresql://securevault_staging:${DB_PASSWORD_STAGING:-changeme_in_staging}@postgres-staging:5432/securevault_staging

# Security
JWT_SECRET=${JWT_SECRET_STAGING:-generate_with_openssl_rand_hex_32}
ENCRYPTION_KEY=${ENCRYPTION_KEY_STAGING:-generate_with_openssl_rand_hex_32}

# API Configuration
NODE_ENV=production
PORT=3001
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=24h

# URLs
FRONTEND_URL=https://vault-staging.freijstack.com
BACKEND_HOST=vault-api-staging.freijstack.com
FRONTEND_HOST=vault-staging.freijstack.com
API_URL=https://vault-api-staging.freijstack.com/api

# Network names
APP_NETWORK=securevault_staging_network
EXTERNAL_NETWORK=web

# Volume names
POSTGRES_VOLUME=securevault_staging_postgres_data

# Traefik router names
BACKEND_ROUTER=securevault-staging-backend
FRONTEND_ROUTER=securevault-staging-frontend
CORS_MIDDLEWARE=securevault-staging-cors
# ============================================
# SSO/SAML Configuration (Optional)
# ============================================
SAML_ENABLED=false
SAML_IDP_NAME="Company SSO (Staging)"

# Identity Provider URLs
SAML_ENTRY_POINT=https://idp-staging.example.com/sso/saml
SAML_ISSUER=securevault-staging
SAML_CALLBACK_URL=https://vault-api-staging.freijstack.com/api/auth/saml/callback

# IdP Certificate
SAML_CERT=""

# Session
SESSION_SECRET=<GENERATE_WITH_OPENSSL_RAND_HEX_32>
SAML_SESSION_TIMEOUT=480
# Harbor Container Registry - Staging
ENV=staging
COMPOSE_PROJECT_NAME=harbor-staging

# Container & Network Configuration
CONTAINER_PREFIX=harbor-staging
NETWORK_NAME=harbor_staging_network

# Domain Configuration
REGISTRY_DOMAIN=registry-staging.freijstack.com

# Security Secrets (CHANGE IN PRODUCTION!)
# Generate with: openssl rand -hex 32
DB_PASSWORD=<YOUR_POSTGRES_PASSWORD_HERE>
HARBOR_ADMIN_PASSWORD=<YOUR_HARBOR_ADMIN_PASSWORD_HERE>
CORE_SECRET=<YOUR_CORE_SECRET_32_BYTES_HEX_HERE>
JOBSERVICE_SECRET=<YOUR_JOBSERVICE_SECRET_32_BYTES_HEX_HERE>
REGISTRY_HTTP_SECRET=<YOUR_REGISTRY_HTTP_SECRET_32_BYTES_HEX_HERE>

# Harbor Configuration
HARBOR_ADMIN_USERNAME=admin
HARBOR_ADMIN_EMAIL=admin-staging@freijstack.com

# PostgreSQL Configuration
POSTGRES_DB=registry
POSTGRES_USER=postgres

# Trivy Scanner Configuration
TRIVY_SKIP_UPDATE=false
TRIVY_SEVERITY=UNKNOWN,LOW,MEDIUM,HIGH,CRITICAL

# Storage Configuration
STORAGE_BACKEND=filesystem

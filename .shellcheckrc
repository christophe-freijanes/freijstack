# ShellCheck configuration
# Only show critical errors (syntax errors, undefined vars, etc.)

# Disable style/info/warning level checks
disable=SC2129  # Consider using { cmd1; cmd2; } >> file (style suggestion)
disable=SC2034  # Variable appears unused (often false positive in sourced files)
disable=SC2153  # Possible misspelling (false positives on env vars)
disable=SC2012  # Use find instead of ls (acceptable for simple listings)
disable=SC2086  # Double quote to prevent globbing (sometimes intentional)
disable=SC2087  # Quote heredoc delimiter (client vs server expansion)
disable=SC2155  # Declare and assign separately (style suggestion, doesn't affect correctness)

# Severity threshold: only show errors (syntax, logic bugs)
# Skips: warning, info, style
severity=error

# Keep enabled: critical issues only
# - SC1xxx: Syntax errors
# - Undefined variables, command not found, etc.

# External sources (allow sourcing from /etc, /usr, common paths)
source-path=SCRIPTDIR
